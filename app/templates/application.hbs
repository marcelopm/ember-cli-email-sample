<div class="url">URL: {{target.url}}</div>
<aside>
    <ul>
        <li><h2>Mailboxes</h2></li>
        {{#each mailbox as |box|}}
        <li>
            {{#link-to "mailbox" box current-when="box"}}
            <span class="count">
                {{box.messages.length}}
            </span>
            {{box.name}}
            {{/link-to}}
        </li>
        {{else}}
        <li>
            Sorry, nobody is here.
        </li>
        {{/each}}
    </ul>
</aside>

<section class="main">
    {{outlet}}
</section>